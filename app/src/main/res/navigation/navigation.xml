<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/landing_fragment">

    <fragment
        android:id="@+id/landing_fragment"
        android:name="com.example.mfusionclone.screens.landing.Landing"
        android:label="landing_fragment"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landing_fragment_to_menu"
            app:destination="@id/menu" />
    </fragment>
    <fragment
        android:id="@+id/menu"
        android:name="com.example.mfusionclone.screens.menu.Menu"
        android:label="menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_to_cart"
            app:destination="@id/cart" />
    </fragment>
    <fragment
        android:id="@+id/cart"
        android:name="com.example.mfusionclone.screens.cart.Cart"
        android:label="Cart"
        tools:layout="@layout/fragment_cart"/>
</navigation>